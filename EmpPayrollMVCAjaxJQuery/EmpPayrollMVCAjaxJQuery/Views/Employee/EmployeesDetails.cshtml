@{
    ViewData["Title"] = "EmployeesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <div>
    <a asp-action="AddEmployee" class="btn btn-primary">Register</a>
</div> *@

<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Add Employee</button>
<br/>
<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>EmpId</th>
            <th>EmpName</th>
            <th>ProfileImage</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Salary</th>
            <th>StartDate</th>
            <th>Notes</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>
<div class="modal fade modal" id="EmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" id="AddEmpHead">
                <h1 class="text-info modal-title">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-header" id="UpdateEmpHead">
                <h1 class="text-info modal-title">Update Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="EmpId1">
                        <label>EmpId</label>
                        <input type="text" placeholder="Enter your name" class="form-control" id="EmpId" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter your name" class="form-control" id="EmpName" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <label>Profile Image</label>
                        <input type="text" placeholder="Enter your Profile Image" class="form-control" id="ProfileImage" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" placeholder="Enter your Gender" class="form-control" id="Gender" />
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <input type="text" placeholder="Enter your Department" class="form-control" id="Department" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Enter your Salary" class="form-control" id="Salary" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>StartDate</label>
                        <input type="datetime-local" placeholder="Enter your Start Date" class="form-control" id="StartDate" />
                    </div>
                    <div class="form-group">
                        <label>Notes</label>
                        <input type="text" placeholder="Enter your Notes" class="form-control" id="Notes" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee();" id="btnAddEmp">Save</button>
                <button class="btn btn-warning" onclick="updateEmployee();" style="display:none" id="updateBtn">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>  
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/employee.js"></script>
